alias rtags="ctags -e -R app lib vendor tasks"

alias emacs='TERM=xterm-256color /Applications/Emacs.app/Contents/MacOS/Emacs -nw'

alias gp='git pull'
alias gd='clear; git diff'
alias gs='git status -sb'

