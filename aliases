alias be='bundle exec'

# Aliases
alias ls="/bin/ls -G"
alias ll="ls -laGFh"

alias de="RAILS_ENV=development"
alias te="RAILS_ENV=test"
alias pe="RAILS_ENV=production"

alias glo="git log --oneline"
alias gdc="clear; git diff --cached"
alias gpu="git push -u"
alias hpu="hub pull-request"
alias gp='git pull'
alias gd='clear; git diff'
alias gs='git status -sb'
alias aa='git add --all'
alias gcm='git checkout master'

alias throttle="awk '!(NR % 100)'"

alias csv='column -s\; -t <'
alias d=docker-compose

alias staging-console="ENV=staging make pull-image rails-c"
alias prod-console="ENV=production make pull-image rails-c"

alias st="ENV=staging "
alias pr="ENV=production "